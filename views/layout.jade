doctype html
html(lang="es")
    head
        title Flama
        meta(charset="utf-8")
        link(rel='icon', sizes='16x16 32x32 48x48 64x64', href='/img/favicon.ico')
        link(href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
        link(rel="stylesheet" href="/css/superHero.min.css")
        link(rel="stylesheet" href="/css/main.css")
        script(src="/js/jquery-3.3.1.js")
        script(src="/js/popper.min.js")
        script(src="/js/bootstrap.min.js")
    body
        nav(class="navbar navbar-expand-lg navbar-dark bg-dark background")
            a(class="navbar-brand" href="/")
                span(class="text-warning")  FLAMA
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")
            div(class="collapse navbar-collapse" id="navbarColor01")
                ul(class="navbar-nav mr-auto")
                    -if(User){
                        li(class="nav-item active")
                            a(class="nav-link" href="/") Home 
                                span(class="sr-only") (current)
                        li(class="nav-item")
                            a(class="nav-link" href="/jobs") Jobs
                        li(class="nav-item dropdown")
                            a(class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false") Utility
                            div(class="dropdown-menu" aria-labelledby="themes")
                                a(class="dropdown-item" href="/campaign/claro") Claro                                
                    -}
                -if (!User){
                    ul(class="navbar-nav")
                        li(class="nav-item")
                            a(class="nav-link" href="/login") 
                                span(class="fa fa-user")  Login
                        li(class="nav-item")
                            a(class="nav-link" href="/signup") 
                                span(class="fa fa-user")  Sign Up
                -}else{
                     ul(class="navbar-nav")
                        li(class="nav-item")
                            a(class="nav-link" href="/profile")
                                span(class="fa fa-user")  #{User[0].name} #{User[0].last_name}
                        li(class="nav-item")
                            a(class="nav-link" href="/logout") 
                                span(class="fa fa-angle-right ")  Logout
                -}
        div(class="container")
            br
            block contenido
        